<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="ss.it.entity.Product" table="ORM_Product">
		<id name="pid">
			<generator class="increment" />
		</id>
		<property name="pname" />
		<property name="price" />
		<property name="qty" />
		<component name="details" class="ss.it.entity.Shop">
			<property name="sname" />
			<property name="sadd" />
			<property name="quality" />
		</component>
	</class>
</hibernate-mapping>
